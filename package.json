{
  "name": "xplorer",
  "version": "0.0.1-alpha",
  "description": "A minimal open-source replacement for Microsoft Windows Explorer",
  "main": "dist/main/index.js",
  "author": "XPLORER Team",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k -n backend,frontend -c blue,green \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && python -m xplorer.server",
    "dev:frontend": "node scripts/wait-and-start.js",
    "build": "node scripts/build.js",
    "preview": "electron-vite preview",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "lucide-react": "^0.460.0",
    "msgpack-lite": "^0.1.26",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-window": "^1.8.10",
    "uuid": "^10.0.0",
    "zeromq": "^6.0.0-beta.20",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.9.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-window": "^1.8.8",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^9.1.0",
    "electron": "^39.2.4",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.1",
    "eslint": "^9.15.0",
    "typescript": "^5.6.3",
    "vite": "^7.2.4"
  },
  "build": {
    "appId": "com.xplorer.app",
    "productName": "XPLORER",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "backend/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/dist",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "XPLORER"
    }
  }
}
